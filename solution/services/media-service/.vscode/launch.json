    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",              
                "--port", "8010"
            ],
            "cwd": "${workspaceFolder}",
            "jinja": true,
            "justMyCode": false  // make sure this is false to break in external files
        }
    ]
