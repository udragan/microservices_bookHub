    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Program",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/app",
            "cwd": "${workspaceFolder}",
            "env": {
                "DATABASE_URL": "mongodb://dev:dev@localhost:6004/",
                "DATABASE_USERNAME": "dev",
                "DATABASE_PASSWORD": "dev",
                "DATABASE_NAME": "reviews",
                "JWKS_URL": "http://localhost:8001/.well-known/jwks.json",
                "JWT_AUDIENCE": "bookhub-api-gateway",
                "RABBITMQ_HOST": "localhost",
                "RABBITMQ_BOOKS_EXCHANGE": "boohkub.books_exchange"
            }
        },
        {
            "name": "Attach to Docker",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "port": 2345,
            "host": "localhost",
            "remotePath": "/",
            "cwd": "${workspaceFolder}",
            "apiVersion": 2
        }
    ]
}
